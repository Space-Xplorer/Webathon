<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Registered Events</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
  <style>
    .event-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .event-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 20px rgba(220, 38, 38, 0.2);
      border-color: #dc2626 !important;
    }

    .event-card .btn {
      background-color: #dc2626;
      border-color: #dc2626;
    }

    .event-card .btn:hover {
      background-color: #b91c1c;
      border-color: #b91c1c;
    }
  </style>
</head>
<body class="bg-white text-dark">

  <!-- Header -->
  <nav class="navbar navbar-expand-lg bg-white shadow-sm sticky-top">
    <div class="container">
      <a class="navbar-brand text-danger fw-bold" href="/landing">Campus Events</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav gap-3">
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-danger text-white" href="/auth/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container py-5">
    <h2 class="text-center mb-4 text-danger">Your Registered Events</h2>

    <% if (user.registeredEvents && user.registeredEvents.length > 0) { %>
      <div class="row justify-content-center">
        <% user.registeredEvents.forEach(event => { %>
          <div class="col-md-4 mb-4">
            <div class="card event-card border border-danger shadow-sm">
              <% if (event.images && event.images.length > 0) { %>
                <img src="<%= event.images[0] %>" class="card-img-top" alt="<%= event.title %>">
              <% } else { %>
                <img src="https://via.placeholder.com/400x200?text=No+Image" class="card-img-top" alt="No image available">
              <% } %>
              <div class="card-body">
                <h5 class="card-title text-danger"><%= event.title %></h5>
                <p class="card-text">
                  <strong>Date:</strong> <%= event.date %><br>
                  <strong>Time:</strong> <%= event.time %><br>
                  <strong>Venue:</strong> <%= event.venue %>
                </p>
                <a href="/description/<%= event._id %>" class="btn btn-danger">View Event</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center text-muted">You haven't registered for any events yet.</p>
    <% } %>
  </main>

  <!-- Footer -->
  <footer class="text-center py-4 mt-auto" style="background-color: #ffe5e5; color: #6b0000;">
    <div class="container">
      <p class="mb-0">&copy; <%= new Date().getFullYear() %> Campus Events. All rights reserved.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
