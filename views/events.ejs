<!-- events.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .event-card {
            transition: transform 0.3s ease-in-out;
        }
        .event-card:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body class="bg-blue-50 min-h-screen">
    <div class="flex justify-between items-center mb-4">
        <input type="text" id="eventSearch" placeholder="Search events..." class="form-control w-full max-w-xs">
      </div>
      
    <div class="container py-5">
        <h1 class="text-3xl font-bold text-center text-blue-700 mb-6">Events</h1>

        <ul class="nav nav-tabs justify-center mb-4" id="eventTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="ongoing-tab" data-bs-toggle="tab" data-bs-target="#ongoing" type="button" role="tab">Ongoing</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab">Upcoming</button>
            </li>
        </ul>

        <div class="tab-content" id="eventTabsContent">
            <!-- Ongoing Events -->
            <div class="tab-pane fade show active" id="ongoing" role="tabpanel">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <% ongoingEvents.forEach(event => { %>
                        <div class="bg-white rounded-lg shadow-md p-4 event-card">
                            <h3 class="text-xl font-semibold text-blue-700"><%= event.title %></h3>
                            <p class="text-gray-600"><%= event.date %> | <%= event.time %></p>
                            <p class="text-gray-700">Venue: <%= event.venue %></p>
                            <button class="btn btn-primary mt-2">View Details</button>
                        </div>
                    <% }) %>
                </div>
            </div>

            <!-- Upcoming Events -->
            <div class="tab-pane fade" id="upcoming" role="tabpanel">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <% upcomingEvents.forEach(event => { %>
                        <div class="bg-white rounded-lg shadow-md p-4 event-card">
                            <h3 class="text-xl font-semibold text-blue-700"><%= event.title %></h3>
                            <p class="text-gray-600"><%= event.date %> | <%= event.time %></p>
                            <p class="text-gray-700">Venue: <%= event.venue %></p>
                            <button class="btn btn-success mt-2">Register</button>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

