<body class="flex flex-col min-h-screen bg-gray-50 text-gray-800">
  

  <!-- Header -->
  <header class="bg-white shadow">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-rose-600">Campus Events</h1>
      <nav class="space-x-4">
        <a href="/events" class="text-gray-700 text-decoration-none hover:text-rose-600">Events</a>
        <a href="/about" class="text-gray-700 text-decoration-none hover:text-rose-600">About</a>
        <a href="/login" class="bg-rose-600 text-decoration-none hover:bg-rose-700 text-white font-bold py-2 px-4 rounded-lg hover:rounded">Sign In</a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-grow container mx-auto px-4 py-10">
    <!-- Hero Section -->
    <section class="mb-12 text-center">
      <h2 class="text-4xl font-bold mb-4">Welcome to Campus Events</h2>
      <p class="text-xl mb-6">Discover, attend, and organize events on campus</p>
      <a href="/login" class="bg-rose-600 text-decoration-none hover:bg-rose-700 text-white font-bold py-2 px-6 rounded-lg">Sign In</a>
    </section>

    <!-- Ongoing Events -->
    <h3 class="text-2xl font-bold mb-4">Ongoing Events</h3>
    <div class="tab-pane fade show active" id="ongoing" role="tabpanel">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% ongoingEvents.forEach(event => { %>
                <div class="bg-white rounded-lg shadow-md p-4 event-card">
                    <h3 class="text-xl font-semibold text-blue-700"><%= event.title %></h3>
                    <p class="text-gray-600"><%= event.date %> | <%= event.time %></p>
                    <p class="text-gray-700">Venue: <%= event.venue %></p>
                    <button class="btn btn-primary mt-2">View Details</button>
                </div>
            <% }) %>
        </div>
    </div>

    
    <!-- Upcoming Events -->
    <section class="mb-12">
      <h3 class="text-2xl font-bold mb-4">Upcoming Events</h3>
      <div class="tab-pane fade" id="upcoming" role="tabpanel">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% upcomingEvents.forEach(event => { %>
                <div class="bg-white rounded-lg shadow-md p-4 event-card">
                    <h3 class="text-xl font-semibold text-blue-700"><%= event.title %></h3>
                    <p class="text-gray-600"><%= event.date %> | <%= event.time %></p>
                    <p class="text-gray-700">Venue: <%= event.venue %></p>
                    <button class="btn btn-success mt-2" >Register</button>
                </div>
            <% }) %>
        </div>
    </div>

    </section>
  </main>

