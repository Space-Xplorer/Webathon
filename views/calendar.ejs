<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Events Calendar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: "Segoe UI", sans-serif;
            background-color: #fff;
            padding: 20px;
        }
        .navbar-toggler-icon::before {
            content: "\2630";
            font-size: 24px;
        }

        .navbar-toggler:not(.collapsed) .navbar-toggler-icon::before {
            content: "\2716";
        }

        .logo-img {
            height: 40px;
            margin-right: 10px;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
        }

        .section-title {
            font-weight: bold;
            color: #e63946;
            margin-bottom: 20px;
        }

        .calendar {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        .bg-event {
            background-color: #e63946 !important;
            color: white !important;
            cursor: pointer;
        }

        .event-name {
            font-weight: 500;
            color: #343a40;
        }

        .event-date {
            font-weight: bold;
            color: #e63946;
            display: block;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-md bg-white shadow-sm sticky-top z-50" style="opacity: 0.95; z-index: 1030;">
        <div class="container">
            <a class="navbar-brand text-danger fw-bold fs-4" href="/landing">
                <img src="https://cdn.prod.website-files.com/60af144c343b5fdc5513a640/62201bb0b4baad0916cfc7bb_03c756_0a279644d7694f22996bd152f6f8b6be_mv2.png"
                    alt="Logo" class="logo-img" />
                Campus Events
            </a>

            <button class="navbar-toggler collapsed border-0" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center gap-3">
                  <li class="nav-item">
                    <a class="nav-link text-dark fw-semibold" href="/landing">Home</a>
                  </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-semibold" href="/events">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-semibold" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-danger text-white fw-semibold rounded-lg hover:rounded" href="/login">Sign In</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container my-4">
        <div class="row">
            <!-- Ongoing Events -->
            <div class="col-md-3">
                <h4 class="section-title">Ongoing Events</h4>
                <ul class="list-group">
                    <li class="list-group-item">
                        <span class="event-name">Hackathon 2025</span>
                        <span class="event-date">Apr 3 - 5</span>
                    </li>
                    <li class="list-group-item">
                        <span class="event-name">Photography Week</span>
                        <span class="event-date">Apr 5 - 9</span>
                    </li>
                </ul>
            </div>

            <!-- Static Calendar -->
            <div class="col-md-6">
                <div class="calendar text-center">
                    <h5>April 2025</h5>
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Sun</th>
                                <th>Mon</th>
                                <th>Tue</th>
                                <th>Wed</th>
                                <th>Thu</th>
                                <th>Fri</th>
                                <th>Sat</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td>1</td>
                                <td>2</td>
                                <td class="bg-event" data-bs-toggle="tooltip" title="Hackathon 2025">3</td>
                                <td class="bg-event" data-bs-toggle="tooltip" title="Hackathon 2025">4</td>
                                <td class="bg-event" data-bs-toggle="tooltip" title="Hackathon & Photography Week">5
                                </td>
                                <td class="bg-event" data-bs-toggle="tooltip" title="Photography Week">6</td>
                            </tr>
                            <tr>
                                <td class="bg-event" data-bs-toggle="tooltip" title="Photography Week">7</td>
                                <td class="bg-event" data-bs-toggle="tooltip" title="Photography Week">8</td>
                                <td class="bg-event" data-bs-toggle="tooltip" title="Photography Week">9</td>
                                <td class="bg-event" data-bs-toggle="tooltip" title="Tech Talk">10</td>
                                <td>11</td>
                                <td>12</td>
                                <td>13</td>
                            </tr>
                            <tr>
                                <td>14</td>
                                <td class="bg-event" data-bs-toggle="tooltip" title="Cultural Fest">15</td>
                                <td>16</td>
                                <td>17</td>
                                <td>18</td>
                                <td>19</td>
                                <td>20</td>
                            </tr>
                            <tr>
                                <td>21</td>
                                <td>22</td>
                                <td>23</td>
                                <td>24</td>
                                <td>25</td>
                                <td>26</td>
                                <td>27</td>
                            </tr>
                            <tr>
                                <td>28</td>
                                <td>29</td>
                                <td>30</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Upcoming Events -->
            <div class="col-md-3">
                <h4 class="section-title">Upcoming Events</h4>
                <ul class="list-group">
                    <li class="list-group-item">
                        <span class="event-name">Tech Talk</span>
                        <span class="event-date">Apr 10</span>
                    </li>
                    <li class="list-group-item">
                        <span class="event-name">Cultural Fest</span>
                        <span class="event-date">Apr 15</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Bootstrap Tooltip Enable -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        tooltips.forEach(t => new bootstrap.Tooltip(t));
    </script>

</body>

</html>