<!DOCTYPE html>

<html lang="en">



<head>

  <meta charset="UTF-8" />

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Check Availability</title>



  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />



  <style>

    body {

      background-color: #f8f9fa;

    }



    .card {

      max-width: 500px;

      margin: 40px auto;

      border-radius: 1rem;

    }



    #bookBtn {

      display: none;

    }

  </style>

</head>



<body>

  <div class="container">

    <div class="card shadow p-4">

      <h3 class="text-center text-danger mb-4">Check Availability</h3>



      <!-- Type Selector -->

      <div class="mb-3">

        <label class="form-label fw-semibold">Type</label>

        <select id="typeSelect" class="form-select">

          <option value="room">Class Room</option>

          <option value="lab">Lab</option>

        </select>

      </div>



      <!-- Date -->

      <div class="mb-3">

        <label class="form-label fw-semibold">Date</label>

        <input type="date" id="dateInput" class="form-control" />

      </div>



      <!-- Time -->

      <div class="mb-3">

        <label class="form-label fw-semibold">Time</label>

        <input type="time" id="timeInput" class="form-control" />

      </div>



      <!-- Check Button -->

      <div class="text-center">

        <button onclick="checkAvailability()" class="btn btn-danger px-4">Check Availability</button>

      </div>



      <!-- Result -->

      <div id="result" class="mt-4 text-center fw-semibold fs-6"></div>



      <!-- Book Button -->

      <div class="text-center mt-3">

        <button id="bookBtn" class="btn btn-success px-4" onclick="bookroom()">Book</button>

      </div>

    </div>

  </div>



  <script>

    let selectedRoom = null;



    function checkAvailability() {

      const type = document.getElementById("typeSelect").value;

      const date = document.getElementById("dateInput").value;

      const time = document.getElementById("timeInput").value;

      const resultDiv = document.getElementById("result");

      const bookBtn = document.getElementById("bookBtn");



      bookBtn.style.display = "none";

      resultDiv.innerHTML = "";



      if (!date || !time) {

        resultDiv.innerHTML = '<span class="text-danger">Please select both date and time.</span>';

        return;

      }



      const rooms = ["Room 101", "Room 205", "Room 302"];

      const labs = ["Lab A", "Lab B", "Lab C"];



      const available = Math.random() > 0.5; // random true/false



      if (available) {

        selectedRoom = type === "room"

          ? rooms[Math.floor(Math.random() * rooms.length)]

          : labs[Math.floor(Math.random() * labs.length)];



        resultDiv.innerHTML = `

          <span class="text-success">‚úÖ <strong>${selectedRoom}</strong> is available on <strong>${date}</strong> at <strong>${time}</strong>.</span>

        `;

        bookBtn.style.display = "inline-block";

      } else {

        selectedRoom = null;

        resultDiv.innerHTML = `

          <span class="text-danger">‚ùå No ${type === "room" ? "classroom" : "lab"} is available on <strong>${date}</strong> at <strong>${time}</strong>.</span>

        `;

        bookBtn.style.display = "none";

      }

    }



    function bookroom() {

      const resultDiv = document.getElementById("result");

      const bookBtn = document.getElementById("bookBtn");



      if (selectedRoom) {

        resultDiv.innerHTML = `

          <span class="text-primary">üìö <strong>${selectedRoom}</strong> has been <strong>booked</strong> successfully!</span>

        `;

        bookBtn.style.display = "none";

      }

    }

  </script>

</body>



</html>